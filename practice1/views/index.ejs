            <tr>
                <td align="center" style="border-color:rgb(255, 255, 255)"><img src="/Dean1st.png" width=30 height=30></td>
                <td style="border-color:rgb(210, 210, 210)">
                    <%=rows[0].stu_name%>
                </td>
                <td style="border-color:rgb(210, 210, 210)">
                    <%=rows[0].avg_grade%>
                </td>
                <td style="border-color:rgb(210, 210, 210)">
                    <%=rows[0].sum_credit%>
                </td>
            </tr>
            <tr>
                <td align="center" style="border-color:rgb(255, 255, 255)"><img src="/Dean2nd.png" width=30 height=30></td>
                <td style="border-color:rgb(210, 210, 210)">
                    <%=rows[1].stu_name%>
                </td>
                <td style="border-color:rgb(210, 210, 210)">
                    <%=rows[1].avg_grade%>
                </td>
                <td style="border-color:rgb(210, 210, 210)">
                    <%=rows[1].sum_credit%>
                </td>
            </tr>
            <tr>
                <td align="center" style="border-color:rgb(255, 255, 255)"><img src="/Dean3rd.png" width=30 height=30></td>
                <td style="border-color:rgb(210, 210, 210)">
